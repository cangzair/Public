
config samba
	option workgroup 'WORKGROUP'
	option charset 'UTF-8'
	option description 'Samba on OpenWRT'
	option homes '0'
	option macos '0'
	option name 'N1'

config sambashare
	option read_only 'no'
	option guest_ok 'yes'
	option inherit_owner 'yes'
	option create_mask '0777'
	option path '/mnt/mmcblk2p4'
	option name 'mmcblk2p4'
	option force_root '0'

