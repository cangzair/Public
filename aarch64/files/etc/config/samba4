
config samba
	option workgroup 'WORKGROUP'
	option charset 'UTF-8'
	option description 'Samba on OpenWRT'
	option allow_legacy_protocols 'yes'
	option macos '0'
	option autoshare '0'
	option enabled '0'

config sambashare
	option browseable 'yes'
	option read_only 'no'
	option force_root 'yes'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option guest_only 'no'
	option name 'mmcblk2p4'
	option path ' /mnt/mmcblk2p4'

